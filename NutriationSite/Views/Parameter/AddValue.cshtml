@model NutriationSite.Models.ParameterValue

<script src="@Url.Content("~/Scripts/jquery.validate.js")"
        type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")"
        type="text/javascript"></script>

<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model =>model.Parameter_Id)
    <div>
        <div class="editor-field">
            @Html.LabelFor(model => model.Value)
            @Html.ValidationMessageFor(model => model.Value)
        </div>
        <div class="editor-field">
            <p>@Html.TextBoxFor(model => model.Value, new { style = "width:300px" })</p>
        </div>
    </div>
        <div>
            @Html.LabelFor(model => model.Comment)
            <p>@Html.TextAreaFor(model => model.Comment, new { style = "width:300px" })</p>
        </div>
        <p><input type="submit" value="Ok" /></p>
    }
</div>