@model IEnumerable<NutriationSite.Models.Parameter>

@{
    ViewBag.Title = "DBTestView";
}

<h2>DBTestView</h2>

<div>
    <table>
        <tr class="header">
            <td><p>Название книги</p></td>
            <td><p>Автор</p></td>
            <td><p>Цена</p></td>
            <td></td>
        </tr>
        @foreach (NutriationSite.Models.Parameter b in Model)
        {
            <tr>
                <td><p>@b.Id</p></td>
                <td><p>@b.Measure_Unit</p></td>
                <td><p>@b.Name</p></td>
                <td><p><a href="/Home/Buy/@b.Id">Купить</a></p></td>
            </tr>
        }


        
    </table>
</div>